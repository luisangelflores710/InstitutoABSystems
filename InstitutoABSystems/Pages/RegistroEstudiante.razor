@page "/registro/{idUsuario:int}"  
<link href="css/bootstrap/RegistroEstudiante.css" rel="stylesheet" />
@using InstitutoABSystems.Data
@using InstitutoABSystems.Models
@inject AppDbContext Db
@inject NavigationManager Nav

<h3>Registro de Estudiante</h3>

<EditForm Model="@estudiante" OnValidSubmit="GuardarDatos" class="form-container">
    <DataAnnotationsValidator />
    <ValidationSummary class="validation-summary" />

    <div class="form-group">
        <label>Nombres:</label>
        <InputText @bind-Value="estudiante.Nombres" class="input-field" />
    </div>

    <div class="form-group">
        <label>Apellidos:</label>
        <InputText @bind-Value="estudiante.Apellidos" class="input-field" />
    </div>

    <div class="form-group">
        <label>Fecha de nacimiento:</label>
        <InputDate @bind-Value="estudiante.FechaNacimiento" class="input-field" />
    </div>

    <div class="form-group">
        <label>Dirección:</label>
        <InputText @bind-Value="estudiante.Direccion" class="input-field" />
    </div>

    <div class="form-group">
        <label>Sexo:</label>
        <InputSelect @bind-Value="estudiante.Sexo" class="input-field">
            <option value="">--Selecciona--</option>
            <option value="Masculino">Masculino</option>
            <option value="Femenino">Femenino</option>
            <option value="Otro">Otro</option>
        </InputSelect>
    </div>

    <div class="form-group">
        <label>CURP:</label>
        <InputText @bind-Value="estudiante.CURP" class="input-field" />
    </div>

    <div class="form-group">
        <label>Teléfono:</label>
        <InputText @bind-Value="estudiante.Telefono" class="input-field" />
    </div>

    <div class="form-group">
        <label>Email:</label>
        <InputText @bind-Value="estudiante.Email" class="input-field" />
    </div>

    <div class="form-group">
        <label>Modalidad:</label>
        <InputSelect @bind-Value="estudiante.Modalidad" class="input-field">
            <option value="">--Selecciona--</option>
            <option value="Presencial">Presencial</option>
            <option value="Online">Online</option>
        </InputSelect>
    </div>

    <div class="form-group checkbox-group">
        <InputCheckbox @bind-Value="estudiante.RequiereAsistencia" />
        <label>Requiere asistencia</label>
    </div>

    <div class="form-group">
        <InputText @bind-Value="estudiante.DescripcionPersonal" placeholder="Descripción personal (opcional)" class="input-field" />
    </div>

    <div class="form-group checkbox-group">
        <InputCheckbox @bind-Value="estudiante.VariosExamenesBool" />
        <label>¿Desea presentar varios exámenes?</label>
    </div>

    @if (estudiante.VariosExamenesBool) //validamos si marcco el check y creamos el Input para que escriba
    {
        <div class="form-group">
            <InputText @bind-Value="estudiante.VariosExamenes" placeholder="Varios exámenes (separados por coma)" class="input-field" />
        </div>
    }

    <div class="form-group">
        <label>Horario preferencia (opcional):</label>
        <InputSelect @bind-Value="estudiante.HorarioPreferencia" class="input-field">
            <option value="">--Selecciona--</option>
            @foreach (var hora in horariosOficina) //traemos el metodo de horarios de oficina donde se listan las opciones
            {
                <option value="@hora">@hora</option>
            }
        </InputSelect>
    </div>

    <button type="submit" class="btn-submit">Guardar</button>
</EditForm>




@code {
    [Parameter] public int idUsuario { get; set; }
    private Estudiante estudiante;
    
    //Metodo para listar los horarios de oficina
    private List<string> horariosOficina = new List<string>
    {
        "09:00", "10:00", "11:00", "12:00",
        "13:00", "14:00", "15:00", "16:00", "17:00"
    };


    protected override void OnInitialized()
    {
        estudiante = new Estudiante
        {
            IdUsuario = idUsuario
        };
    }
    //Guardamos los datos del estudiante y vamos a la pantalla de inicio
    private void GuardarDatos()
    {
        Db.Estudiantes.Add(estudiante);
        Db.SaveChanges();
        Nav.NavigateTo("/inicio");
    }
}
